sample = ['GTA','GGG','CAC']

def read_dna(dna_file):
  dna_data = ""
  with open(dna_file, "r") as f:
    for line in f:
      dna_data += line
  return dna_data

def dna_condons(dna):
  condons = []
  for letter in range(0, len(dna), 3):
    if (letter + 3) < len(dna):
      condons.append(dna[letter:letter + 3])
  return condons
